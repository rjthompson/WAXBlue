<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <GridView
            android:id="@+id/locationGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10sp"
            android:horizontalSpacing="10sp"
            android:gravity="center"
            android:layout_marginBottom="5sp"
            android:layout_alignParentTop="true"
            />


    <ListView
            android:id="@+id/deviceListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationGridView"
            android:layout_above="@+id/pairButtonGroup"
            android:background="@drawable/horse"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"/>


    <RelativeLayout
            android:id="@+id/pairButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >

        <Button
                android:id="@+id/finishButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/finish"
                android:onClick="finishClick"
                android:visibility="visible"
                />

        <Button
                android:id="@+id/clearSelectedButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/clearSelected"
                android:layout_toRightOf="@+id/finishButton"
                android:onClick="clearSelectedClick"
                android:visibility="visible"
                />

        <Button
                android:id="@+id/clearButton"
                android:layout_toRightOf="@+id/clearSelectedButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="@string/clearAll"
                android:onClick="clearClick"
                android:visibility="visible"
                />
    </RelativeLayout>

    <RadioGroup
            android:id="@+id/modeGroup"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            android:layout_above="@+id/rateGroup"
            >


        <RadioButton
                android:id="@+id/text"
                android:textSize="18sp"

                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:text="@string/mode_text"
                android:layout_marginRight="5sp"
                android:onClick="onRadioButtonClicked"/>

        <RadioButton
                android:id="@+id/textLong"
                android:textSize="18sp"
                android:layout_gravity="fill"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"

                android:text="@string/mode_text_long"
                android:onClick="onRadioButtonClicked"/>

        <RadioButton
                android:id="@+id/binary"
                android:textSize="18sp"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_marginRight="5sp"

                android:text="@string/mode_binary"
                android:onClick="onRadioButtonClicked"/>

        <!--<RadioButton-->
                <!--android:id="@+id/binLong"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_gravity="fill"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50sp"-->
                <!--android:text="@string/mode_binary_long"-->
                <!--android:onClick="onRadioButtonClicked"/>-->
    </RadioGroup>

    <RelativeLayout
            android:id="@+id/rateGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_above="@+id/connectButtonGroup"
            android:visibility="invisible"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="25sp"
            >

        <TextView
                android:id="@+id/rateLabel"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:text="@string/rate"
                android:textSize="18sp"
                />

        <EditText
                android:id="@+id/rateEntry"
                android:layout_height="50sp"
                android:layout_width="75sp"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@+id/rateLabel"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/connectButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_marginTop="5sp"
            >

        <Button
                android:id="@+id/connectButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5sp"
                android:text="@string/connect"
                android:layout_toRightOf="@+id/rateEntry"
                android:onClick="connectClick"/>

        <Button
                android:id="@+id/streamButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/stream"
                android:layout_toRightOf="@+id/connectButton"
                android:onClick="streamClick"/>

        <Button
                android:id="@+id/stopButton"
                android:layout_toRightOf="@+id/streamButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="@string/stop"
                android:onClick="stopClick"/>
    </RelativeLayout>

</RelativeLayout>